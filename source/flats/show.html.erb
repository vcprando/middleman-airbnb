<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('<%= data.flats[owner].picture %>');height: 50vh; background-position: center;">
  <div class="banner-content">
    <h1>Airbnb Hollidays</h1>
    <p>Get ready for your next trip!</p>
    <%= link_to "Where can you find us", "/show.html", class: "btn btn-primary" %>
  </div>
</div>
<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
       <div class="header-flat-details">
         <div class="header-flat-owner text-center">
          <img class="img-circle" src="https://avatars3.githubusercontent.com/u/13828415?v=4" alt="Val" width="80">
          <p>vcprando</p>
         </div>
         <div class="header-flat-name">
          <h1>Nice penthouse in Paris Neuilly-sur-Seine</h1>
          <p>Paris, FR</p>
          <p class="rating">
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
          </p>
         </div>
       </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="#">
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input id="checkin" class="form-control" placeholder="checkin" type="text">
              </div>
              <div class="col-xs-6">
                <input class="form-control" placeholder="checkout" type="text">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <select name="" id="guests" class="form-control">
                  <option value="1">1 guest</option>
                  <option value="2">2 guest</option>
                  <option value="3">3 guest</option>
                </select>
              </div>





        </form>




      </div>


    </div>
  </div>
</div>

